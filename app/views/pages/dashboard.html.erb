

<div class="row">
  <h1 class="text-center">Dashboard</h1>

  <div class="col-md-4">

      <h3 class="text-center">Books <%= link_to "New Book", new_book_path, class: "btn btn-primary btn-sm"%></h1>
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Availability</th>
            <th></th>
          </tr>
        </thead>


        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th><%=book.id%></th>
            <td><%= link_to book.name, book_path(book)%> </td>
            <td><%= book.availability%></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
          </tr>
          <% end %>
          </tbody>


        </table>


  </div>

  <div class="col-md-4">
    <h3 class="text-center">Purchased</h1>

  </div>

  <div class="col-md-4">
    <h3 class="text-center">Sales</h1>
  </div>

</div>
